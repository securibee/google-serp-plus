{
  "manifest_version": 2,
  "name": "Google SERP plus",
  "description": "An extension to improve interactions with Google's SERP",
  "permissions": [ "tabs" ],
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/search*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_title": "Google SERP plus",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}